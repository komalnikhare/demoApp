<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="20dp"
    tools:context=".CharacterDetailActivity">

    <android.support.constraint.ConstraintLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

    <TextView
        android:id="@+id/txt_name_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name :"
        android:textSize="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/txt_name_value"
        android:textColor="@color/lable_txt"

        />

    <TextView
        android:id="@+id/txt_name_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Value :"
        android:textSize="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/txt_name_lbl"
        android:layout_marginBottom="20dp"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/txt_height_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Height :"
        android:textSize="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/txt_height_value"
        android:textColor="@color/lable_txt"
        app:layout_constraintTop_toBottomOf="@+id/txt_name_value"
        />

    <TextView
        android:id="@+id/txt_height_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Value :"
        android:textSize="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/txt_height_lbl"
        app:layout_constraintTop_toBottomOf="@+id/txt_name_value"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/txt_mass_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mass :"
        android:textSize="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/txt_mass_value"
        android:textColor="@color/lable_txt"
        app:layout_constraintTop_toBottomOf="@+id/txt_height_value"
        />

    <TextView
        android:id="@+id/txt_mass_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Value :"
        android:textSize="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/txt_mass_lbl"
        app:layout_constraintTop_toBottomOf="@+id/txt_height_value"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/txt_date_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Created Time :"
        android:textSize="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/txt_date_value"
        android:textColor="@color/lable_txt"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintTop_toBottomOf="@+id/txt_mass_value"
        />

    <TextView
        android:id="@+id/txt_date_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Value :"
        android:textSize="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/txt_date_lbl"
        app:layout_constraintTop_toBottomOf="@+id/txt_mass_value"
        android:textColor="@color/white"
        />
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>